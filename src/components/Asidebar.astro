---
import Book from "@/assets/book-2.svg";
import Calendar from "@/assets/calendar-week.svg";
import File from "@/assets/file.svg";
import Spark from "@/assets/file-spark.svg";
import Home from "@/assets/home.svg";
import Receipt from "@/assets/receipt-2.svg";

const NAVITEMS = [
  {
    name: "Home",
    component: Home,
    title: "Inicio",
    href: "/"
  },
  {
    name: "Calendar",
    component: Calendar,
    title: "Calendario",
    href: "#"
  },
  {
    name: "Book",
    component: Book,
    title: "Cursos",
    href: "#"
  },
  {
    name: "Receipt",
    component: Receipt,
    title: "Pagos",
    href: "#"
  },

  {
    name: "Spark",
    component: Spark,
    title: "Servicios",
    href: "/servicios"
  },
  {
    name: "File",
    component: File,
    title: "Tr√°mites",
    href: "#"
  },
];
---

<aside class="md:flex hidden fixed top-18 flex-col w-fit bg-white h-full">
  {
    NAVITEMS.map((icon) => {
      const { name, title } = icon;
      const styleClass = (title === 'Servicios') ? "bg-blue-100" : ""
      return (
        <a
          class={`p-4 hover:bg-blue-200 ${styleClass} p-4 flex flex-col justify-center items-center text-gray-800`}
          href={icon.href}
        >
          <icon.component class="size-8" />
          <span class="text-xs">{title}</span>
        </a>
      );
    })
  }
</aside>
