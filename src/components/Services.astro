---
import Clipboard from "@/assets/clipboard.svg";
import Pencil from "@/assets/pencil.svg";
import ToggleAct from "@/assets/hand-click.svg";
import ResearchGroup from "@/assets/user-search.svg";

const SERVICES = [
  {
    name: "Eventos",
    description:
      "Inscribete en nuestros eventos y participa en actividades culturales, deportivas y académicas.",
    component: Clipboard,
    href: "eventos"
  },
  {
    name: "Refuerzo Académico",
    description:
      "Accede a los talleres y refuerzos académicos para mejorar tus habilidades y conocimientos.",
    component: ToggleAct,
    href: "talleres"
  },
  {
    name: "Recursos",
    description:
      "Descubre y accede a una amplia variedad de recursos educativos en línea.",
    component: Pencil,
    href: "recursos"
  },
  {
    name: "Grupos de Estudio",
    description:
      "Crea y participa en grupos de estudio para compartir conocimientos y aprender juntos.",
    component: ResearchGroup,
    href: "refuerzos/inscritos"
  }
];
---

<h1 class="text-2xl font-semibold mt-24">Servicios</h1>
<h2 class="text-sm">
  Impulsa tu formación con servicios que refuerzan tu aprendizaje y te conectan
  con actividades culturales, deportivas y académicas.
</h2>
<section class="grid grid-cols-2 gap-4 mt-8">
  {
    SERVICES.map((service) => (
      <a href={service.href} class="flex flex-col gap-x-4 bg-white px-4 py-2 rounded-md shadow-lg hover:bg-purple-200">
        <div class="flex items-center gap-x-2">
          <span class="p-1 text-purple-700 bg-purple-200 rounded-sm">
            <service.component class="size-6 "/>
          </span>
          <h3 class="text-sm font-semibold">{service.name}</h3>
        </div>
        <p class="text-xs mt-2 mb-4">{service.description}</p>
      </a>
    ))
  }
</section>
